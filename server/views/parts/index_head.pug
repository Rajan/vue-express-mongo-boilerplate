a#start
section.bar.bar-3.bar--sm.bg--secondary
  .container
    .row
      .col-md-6
        .bar__module
          span.type--fade Stack | Multipurpose HTML Template with Variant Page Builder
      .col-md-6.text-right.text-left-xs.text-left-sm
        .bar__module
          ul.menu-horizontal
            li
              .modal-instance
                a.modal-trigger(href='#') Login
                .modal-container
                  .modal-content
                    section.unpad
                      .container
                        .row
                          .col-sm-6.col-md-offset-3.col-sm-offset-3.col-xs-12
                            .boxed.boxed--lg.bg--white.text-center.feature
                              .modal-close.modal-close-cross
                              h3 Login to Your Account
                              a.btn.block.btn--icon.bg--facebook.type--uppercase(href='#')
                                span.btn__text
                                  i.socicon-facebook
                                  | Login with Facebook
                              a.btn.block.btn--icon.bg--twitter.type--uppercase(href='#')
                                span.btn__text
                                  i.socicon-twitter
                                  | Login with Twitter
                              hr(data-title='OR')
                              .feature__body
                                form(action='/auth/local', method='POST')
                                  input(type="hidden", name="_csrf" value=_csrf)
                                  .row
                                    .col-sm-12
                                      label(for='username')= t("UsernameOrEmail")
                                      input(type='text', name='username', id='username', placeholder=t("YourUsernameOrEmailAddress"))
                                      .hint
                                    .col-sm-12
                                      label(for='password')= t("PasswordSC")
                                      input(type='password', name='password', id='password', placeholder=t("Password"))
                                      .hint= t("PasswordlessLoginHint")
                                    .col-sm-12
                                     .flash
                                      if messages.error
                                       .alert.alert-danger
                                       for error in messages.error
                                         div= error.msg
                                      if messages.info
                                       .alert.alert-success
                                        for info in messages.info
                                         div= info.msg

                                     if messages.error
                                      .forgot
                                       a(href='/forgot')= t("ForgotYourPassword")
                                    .col-sm-12
                                      button.btn.btn--primary.type--uppercase(type='submit') Login
                                  // end of row
                                span.type--fine-print.block
                                  | Dont have an account yet?
                                  a(href='#') Create account
                                span.type--fine-print.block
                                  | Forgot your username or password?
                                  a(href='#') Recover account
                        // end of row
                      // end of container
            li
              .modal-instance
                a.modal-trigger(href='#') Create Account
                .modal-container
                  .modal-content
                    section.imageblock.feature-large.bg--white.border--round
                      .imageblock__content.col-md-5.col-sm-3.pos-left
                        .background-image-holder
