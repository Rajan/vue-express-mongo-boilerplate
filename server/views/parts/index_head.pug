                            a.btn.block.btn--icon.bg--twitter.type--uppercase(href='#')
                              span.btn__text
                                i.socicon-twitter
                                |                                                                         Sign up with Twitter
                            hr(data-title='OR')
                            form
                              .row
                                .col-xs-12
                                  input(type='email', name='Email Address', placeholder='Email Address')
                                .col-xs-12
                                  input(type='password', name='Password', placeholder='Password')
                                .col-xs-12
